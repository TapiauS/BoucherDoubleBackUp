<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:Boucher_Double_Front.View"
             x:Class="Boucher_Double_Front.View.ProductManager"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <ContentPage.Content>
        <StackLayout>
            <Grid RowDefinitions="auto,auto,auto,auto" ColumnDefinitions="*,*" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Label Grid.Column="0" Text="Nom" Grid.Row="0"/>
                <Entry Grid.Column="1" Text="{Binding Product.Name}" Grid.Row="0"/>
                <Grid ColumnDefinitions="auto,auto,auto" RowDefinitions="auto" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <Label Text="Prix :" Grid.Column="0" Grid.Row="0"/>
                    <Entry Grid.Column="1" Grid.Row="0" Keyboard="Numeric" Text="{Binding Product.Price.FullMonnaie}"/>
                    <Label Text="," Grid.Column="2" Grid.Row="0"/>
                    <Entry Text="{Binding Product.Price.Cent}" Grid.Column="3" Keyboard="Numeric" Grid.Row="0"/>
                </Grid>
                <Button Text="Selectionner une illustration" Clicked="OnPickPhotoButtonClicked" Grid.Row="2" Grid.Column="0"/>
                <Image Source="{Binding ImageSource}" Grid.Row="2" Grid.Column="1" HeightRequest="100" WidthRequest="100"/>
                <Button Text="Valider" Grid.Row="3" Grid.Column="0" Clicked="OnSaveAsync"/>
                <Button Text="Supprimer" Grid.Row="3" Grid.Column="1" Clicked="OnDeleteAsync"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>