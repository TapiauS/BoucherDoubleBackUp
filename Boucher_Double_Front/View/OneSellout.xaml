<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:Boucher_Double_Front.View" 
             x:DataType="view:OneSellout"
             x:Class="Boucher_Double_Front.View.OneSellout"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Bill}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Picker x:Name="BlueToothPicker" Title="Sélectionner une imprimante" ItemDisplayBinding="{Binding .}"/>
            <Button Text="Valider" Clicked="ValidateAndSendMail" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>