<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:Boucher_Double_Front.View"
             x:DataType="view:RestaurantInfo"
             x:Class="Boucher_Double_Front.View.RestaurantInfo"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <HorizontalStackLayout>
                <Label Text="Mettre à jour le nom du magasin:"/>
                <Entry Text="{Binding Store.Name}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Mettre à jour le mail:"/>
                <Entry Text="{Binding Store.Mail}" TextChanged="MailTextChanged"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Mettre à jour le numéro de télephone:"/>
                <Entry Text="{Binding Store.PhoneNumber}" TextChanged="OnPhoneNumberChanged"/>
            </HorizontalStackLayout>
            <Button Text="Sélectionner une photo" Clicked="OnPickPhotoButtonClicked" />
            <Image Source="{Binding PicturePath}" HeightRequest="200" WidthRequest="200" />
            <Button Text="Valider les changements" Clicked="OnValidateAsync"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>