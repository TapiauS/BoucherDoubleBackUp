<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Boucher_Double_Front.View.UpdateClient"
             xmlns:view="clr-namespace:Boucher_Double_Front.View"
             BackgroundColor="{DynamicResource BackgroundColor}">
  <StackLayout>
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Nom" Grid.Column="0" Grid.Row="0"/>
            <Entry Text="{Binding Client.Name}" Grid.Column="1" Grid.Row="0"/>
            <Label Text="Prenom" Grid.Column="0" Grid.Row="1"/>
            <Entry Text="{Binding Client.Surname}" Grid.Column="1" Grid.Row="1"/>
            <Label Text="Mail" Grid.Column="0" Grid.Row="2"/>
            <Entry Text="{Binding Client.Mail}" Grid.Column="1" Grid.Row="2" Keyboard="Email"/>
            <Label Text="Numéro de telepehone" Grid.Column="0" Grid.Row="3"/>
            <Entry Text="{Binding Client.PhoneNumber}" Grid.Column="1" Grid.Row="3" Keyboard="Telephone"/>
        </Grid>
        <Grid ColumnDefinitions="*,*" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand">
            <Button Text="Valider" Clicked="OnValidateAsync" Grid.Column="0"/>
            <Button Text="Annuler" Clicked="OnStopAsync" Grid.Column="1"/>
        </Grid>
    </StackLayout>
</ContentPage>